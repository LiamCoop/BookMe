generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  BUSINESS_OWNER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  business Business?
  bookings Booking[]

  @@index([clerkId])
  @@index([email])
}

model Business {
  id               String   @id @default(cuid())
  ownerId          String   @unique
  name             String
  description      String?
  email            String?
  phone            String?
  address          String?
  city             String?
  state            String?
  zipCode          String?
  hoursOfOperation String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  services Service[]

  @@index([ownerId])
}

model Service {
  id          String   @id @default(cuid())
  businessId  String
  name        String
  description String
  price       Float
  duration    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  business Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@index([businessId])
}

model Booking {
  id            String        @id @default(cuid())
  userId        String
  serviceId     String
  startTime     DateTime
  endTime       DateTime
  status        BookingStatus @default(PENDING)
  notes         String?
  priceSnapshot Float
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([serviceId])
  @@index([startTime])
}
